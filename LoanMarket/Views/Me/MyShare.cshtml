
@{
    Layout = null;

}

@using LoanMarket.BLL.ApiModel


@model List<SpreadUserApiModel>


<!DOCTYPE html>
<!-- saved from url=(0055)http://www.uxiangquan.cn/index/index/product/day/2.html -->
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <title>我的分享</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no, viewport-fit=cover">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="renderer" content="webkit">
    <script src="~/Scripts/Common/mui.min.js"></script>
    <style>
        body {
            padding: 0;
            margin: 0;
        }

        .mui-content {
            padding: 10px 0 10px 10px;
        }

        #tab-list {
            margin: 10px auto;
            padding-bottom: 60px;
        }

        #ul1 {
            border-bottom: 2px solid #FF4E22;
            padding-left: 8px;
            margin: 0;
            padding: 0;
        }

            #ul1 li {
                display: inline-block;
                width: 29%;
                line-height: 30px;
                text-align: center;
                border: 1px solid #999;
                border-bottom: none;
                margin-left: 5px;
            }

                #ul1 li:hover {
                    cursor: pointer;
                }

                #ul1 li.active {
                    border-top: 2px solid #FF4E22;
                    border-bottom: 2px solid #FFFFFF;
                }

        #tab-list div {
            border-top: none;
        }

            #tab-list div li {
                line-height: 30px;
                list-style: none;
            }

                #tab-list div li p {
                    padding: 0px 0 10px 30px;
                    border-bottom: 1px solid #ddd;
                }

        .show {
            display: block;
        }

        .hide {
            display: none;
        }

        h3, h4 {
            margin-left: 30px;
        }

        p span {
            display: inline-block;
        }
    </style>


</head>

<body class="mui-ios mui-ios-11 mui-ios-11-0">
    <div class="topimg"><img style="width: 100%;" src="~/Content/Images/myshare/myshare.jpg" /></div>
    <div id="tab-list">
        <ul id="ul1">
            <li class="active">普通用户</li>
            <li>直推会员</li>
            <li>我的团队</li>
        </ul>
        <!--普通用户-->
        <div>
            <ul style="padding-inline-start: 0px;">
                <li>
                    @if (Model != null)
                    {
                        foreach (SpreadUserApiModel item in Model)
                        {
                            if (!item.IsPeculiarUser)
                            {
                                <p>
                                    <span>ID：@item.ToUserNo</span>
                                    <span>TEL：@item.Mobile</span>
                                    <span>
                                        是否是会员：否
                                    </span>
                                </p>
                            }

                        }
                    }
                </li>
            </ul>
        </div>

        <!--直推会员-->
        <div class="hide">
            <ul style="padding-inline-start: 0px;">
                <li>
                    @if (Model != null)
                    {
                        foreach (SpreadUserApiModel item in Model)
                        {
                            if (item.IsPeculiarUser)
                            {
                                <p>
                                    <span>ID：@item.ToUserNo</span>
                                    <span>TEL：@item.Mobile</span>

                                    <span>
                                        是否是会员：是
                                    </span>
                                    <span>
                                        会员等级：@item.UserGroupName
                                    </span>
                                </p>
                            }
                        }
                    }

                </li>

            </ul>
        </div>

        <!--我的团队-->
        <div class="hide">
            <ul style="padding-inline-start: 0px;">
                <li>

                    @if (ViewBag.TeamSpread != null)
                    {
                        foreach (SpreadUserApiModel item in ViewBag.TeamSpread)
                        {
                            <p>
                                <span>ID：@item.ToUserNo</span>
                                <span>TEL：@item.Mobile</span>
                                @if (item.IsPeculiarUser)
                                {
                                    <span>
                                        是否是会员：是
                                    </span>
                                    <span>
                                        会员等级：@item.UserGroupName
                                    </span>
                                }
                                else
                                {
                                    <span>
                                        是否是会员：否
                                    </span>
                                }
                            </p>
                        }

                    }

                </li>

            </ul>
        </div>
    </div>


    <script>
        window.onload = function () {
            var oUl1 = document.getElementById("ul1");
            var aLi = oUl1.getElementsByTagName("li");
            var oDiv = document.getElementById("tab-list");
            var aDiv = oDiv.getElementsByTagName("div");
            for (var i = 0; i < aLi.length; i++) {
                aLi[i].index = i;
                aLi[i].onmouseover = function () {
                    for (var i = 0; i < aLi.length; i++) {
                        aLi[i].className = "";
                    }
                    this.className = "active";
                    for (var j = 0; j < aDiv.length; j++) {
                        aDiv[j].className = "hide";
                    }
                    aDiv[this.index].className = "show";
                }
            }
        }
    </script>
</body>
</html>
